<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tolls="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    android:background="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_photo_card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="8dp"
            app:cardCornerRadius="40dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/profile_photo"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tolls:text="test"
            app:layout_constraintStart_toEndOf="@+id/profile_photo_card"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/party_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tolls:text="test2"
            app:layout_constraintStart_toEndOf="@+id/profile_photo_card"
            app:layout_constraintTop_toBottomOf="@+id/name_text"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/party_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tolls:text="test3"
            app:layout_constraintStart_toEndOf="@+id/profile_photo_card"
            app:layout_constraintTop_toBottomOf="@+id/party_text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="8dp"
            android:textColor="@color/address_label"
            android:textStyle="bold"
            android:textSize="14sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>